	 print "to out\n";
	 print STDERR "to err2\n";'
END
int p52cb_lines = 0;
int p52cb_eof   = 0;
void p52cb(string cmd, FILE f)
{
	string	s;

	unless (cmd == p52cmd) puts("bad 2.1");

