TCLHLPBASE	= $(PROJECT)$(VERSION)
TCLHLP		= $(OUT_DIR)\$(TCLHLPBASE).hlp
TCLHLPCNT	= $(OUT_DIR)\$(TCLHLPBASE).cnt

TCLTEST		= $(OUT_DIR)\$(PROJECT)test.exe
CAT32		= $(OUT_DIR)\cat32.exe
RMDIR		= .\rmd.bat
MKDIR		= .\mkd.bat
